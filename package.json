{
  "name": "what-cse-ai-project",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",

    "dev:web": "pnpm --filter @what-cse/web dev",
    "dev:admin": "pnpm --filter @what-cse/admin dev",
    "dev:server": "cd apps/server && go run ./cmd/api",
    "dev:mobile:h5": "pnpm --filter cse-mobile dev:h5",
    "dev:mobile:weapp": "pnpm --filter cse-mobile dev:weapp",
    "dev:miniprogram": "pnpm --filter cse-miniprogram dev:weapp",

    "build:web": "pnpm --filter @what-cse/web build",
    "build:admin": "pnpm --filter @what-cse/admin build",
    "build:server": "cd apps/server && go build -o api.exe ./cmd/api",
    "build:mobile:h5": "pnpm --filter cse-mobile build:h5",
    "build:mobile:weapp": "pnpm --filter cse-mobile build:weapp",
    "build:miniprogram": "pnpm --filter cse-miniprogram build:weapp",

    "start:web": "pnpm --filter @what-cse/web start",
    "start:admin": "pnpm --filter @what-cse/admin start",
    "start:server": "cd apps/server && ./api.exe",

    "content:gen": "npx ts-node scripts/content-generator.ts",
    "content:next": "npx ts-node scripts/content-generator.ts --next",
    "content:status": "npx ts-node scripts/content-generator.ts --status",
    "content:import": "npx ts-node scripts/import-generated.ts",
    "content:import:dry": "npx ts-node scripts/import-generated.ts --dry-run"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  }
}
